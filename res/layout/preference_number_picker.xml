<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:padding="@dimen/number_picker_dialog_padding"
              android:paddingLeft="@dimen/number_picker_dialog_paddingLeft"
              android:paddingRight="@dimen/number_picker_dialog_paddingRight">

  <TextView
    android:id="@android:id/message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_marginBottom="@dimen/number_picker_dialog_messageMarginBottom"/>

  <net.simonvt.numberpicker.NumberPicker
    android:id="@+id/number_picker"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
</LinearLayout>