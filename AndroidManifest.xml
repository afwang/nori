<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="pe.moe.nori"
  android:versionCode="1"
  android:versionName="1.0">

  <uses-sdk
    android:minSdkVersion="10"
    android:targetSdkVersion="17" />
  <uses-permission android:name="android.permission.INTERNET" />

  <application
    android:allowBackup="true"
    android:icon="@drawable/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme">
    <activity
      android:name="pe.moe.nori.SearchActivity"
      android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name="pe.moe.nori.HelpActivity"
      android:parentActivityName="pe.moe.nori.SearchActivity"
      android:label="@string/activity_label_help"/>
    <activity
      android:name="pe.moe.nori.SettingsActivity"
      android:parentActivityName="pe.moe.nori.SearchActivity"
      android:label="@string/activity_label_settings"/>
  </application>

</manifest>
